<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_avatar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:padding="@dimen/element_padding"
    app:cardBackgroundColor="@color/selector_row"
    app:cardCornerRadius="2dp"
    app:cardElevation="1dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/element_padding">

        <ImageView
            android:id="@+id/card_view_avatar_img"
            android:layout_width="@dimen/dimen_profile_img_small_width"
            android:layout_height="@dimen/dimen_profile_img_small_width"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/element_padding"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/card_view_avatar_title"
            style="@style/CardTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_view_avatar_img"
            android:gravity="center_horizontal" />

    </RelativeLayout>

</android.support.v7.widget.CardView>